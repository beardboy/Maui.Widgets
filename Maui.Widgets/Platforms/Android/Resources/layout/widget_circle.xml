      android:id="@+id/layout_2_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:visibility="visible"
      tools:visibility="visible"
      android:layout_centerVertical="true">

        <TextView
          android:id="@+id/name_2_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:text="@string/widget_circle"
          android:textSize="8dp"
          android:textColor="@android:color/white"/>

        <TextClock
	        android:id="@+id/date_2_1"
	        android:format12Hour="MM/dd/yyyy"
	        android:format24Hour="MM/dd/yyyy"
	        android:text="10/02/2022"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:layout_below="@id/name_2_1"
	        android:textSize="8dp"
	        android:textColor="@android:color/white"/>

        <TextClock
	        android:id="@+id/time_2_1"
	        android:format12Hour="hh:mm:ss a"
	        android:format24Hour="HH:mm:ss a"
	        android:text="02:55 PM"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:layout_below="@id/date_2_1"
	        android:textSize="8dp"
	        android:textColor="@android:color/white"/>

    </RelativeLayout>

